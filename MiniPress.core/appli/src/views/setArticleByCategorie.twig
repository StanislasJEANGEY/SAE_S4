{% block a %}








    {% block content %}
        <div class="container" >
            <h2 class="heading">Créer un article avec une catégorie :</h2>
            <form method="post" action="{{ url_for('articleByCategorie') }}">
                <div id="contenu">
                    <div>
                        <label for="titre">Titre</label>
                        <input type="text" id="titre" name="titre" required placeholder="titre">
                    </div>
                    <div>
                        <label for="contenu">Contenu</label>
                        <input type="text" id="contenu" name="contenu" required placeholder="contenu">
                    </div>
                    <div>
                        <label for="resume">Résumé</label>
                        <input type="text" id="resume" name="resume" required placeholder="resume">
                    </div>
                    <div>
                        <label for="categorie">Catégorie</label>
                        <select name="categorie" id="categorie">
                            {% for categorie in categories %}
                                <option value="{{ categorie.id }}">{{ categorie.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>



                </div>
                <input type="submit" value="Enregistrer">
            </form>
        </div>
    {% endblock %}
{% endblock %}

